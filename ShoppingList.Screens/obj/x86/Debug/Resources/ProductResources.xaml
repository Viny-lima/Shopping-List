<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:converters="using:ShoppingList.Screens.Converters">

    <converters:DateTimeFormStringConverter x:Key="ConvertDateTime"/>

    <SolidColorBrush x:Key="ColorProduct" Color="#eeeeee"/>

    <Style TargetType="TextBlock" x:Key="ProductTitle">
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Margin" Value="0 0 10 0"/>
    </Style>    
    
    <Style TargetType="TextBlock" x:Key="ProductDataRegister">
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Padding" Value="0 0 0 4"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="ProductDescription">
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <Style TargetType="TextBox" x:Key="ProductTitleTextBox">
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Margin" Value="0 0 10 0"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style TargetType="TextBox" x:Key="ProductDescriptionTextBox">
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style TargetType="Button" x:Key="NavigationButton">
        <Setter Property="Background" Value="#eeeeeeee"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Margin" Value="10 0"/>
        <Setter Property="CornerRadius" Value="3" />
    </Style>
    
</ResourceDictionary>
