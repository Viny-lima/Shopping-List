<UserControl x:ConnectionId='1'
    x:Class="ShoppingList.Screens.Views.ProductUpdateView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShoppingList.Screens.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="400">

    <Grid Background="White"
          Padding="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="ADD NEW PRODUCT" 
                Grid.Row="1"
                HorizontalAlignment="Right"
                Style="{StaticResource NavigationButton}"
                Background="#85CB33"
                Foreground="White"
                FontWeight="SemiBold"
                Margin="0"/>

        <StackPanel Orientation="Horizontal" 
                    VerticalAlignment="Bottom"
                    Grid.Row="1"
                    Margin="0 10">
            <TextBox x:ConnectionId='5'                              Style="{StaticResource ProductTitleTextBox}"/>
            <TextBox x:ConnectionId='6'                                Style="{StaticResource ProductTitleTextBox}"/>
            <TextBlock x:ConnectionId='7'                                                                                        Style="{StaticResource ProductDataRegister}"/>
        </StackPanel>

        <TextBox x:ConnectionId='2'                                          
                    Style="{StaticResource ProductDescriptionTextBox}"
                    Grid.Row="2"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <Button x:ConnectionId='3' Name="UpdateButton" 
                    Content="Update" 
                    Style="{StaticResource NavigationButton}"
                                                     
                    />
            <Button x:ConnectionId='4' Name="DeleteButton" 
                    Content="Delete" 
                    Style="{StaticResource NavigationButton}"
                                                     
                    />
        </StackPanel>

    </Grid>
    
</UserControl>

