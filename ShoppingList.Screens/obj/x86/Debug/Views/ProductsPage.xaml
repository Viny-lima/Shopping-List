<Page x:ConnectionId='1'
    x:Class="ShoppingList.Screens.Views.ProductsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShoppingList.Screens.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:ShoppingList.Screens.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>        

        <DataTemplate x:Key="ProductTemplate"                                             >

            <Border x:ConnectionId='3' Background="{StaticResource ColorProduct}" Padding="10" Margin="0 0 0 10">
                <Grid Width="300" 
                      Height="100">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:ConnectionId='5'                       Style="{StaticResource ProductTitle}"/>
                        <TextBlock x:ConnectionId='6'                                                                                Style="{StaticResource ProductDataRegister}"/>
                    </StackPanel>

                    <TextBlock x:ConnectionId='4'                             Style="{StaticResource ProductDescription}" Grid.Row="2"/>

                </Grid>

            </Border>
        </DataTemplate>
        
    </Page.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Image Source="/Assets/Images/background-list.jpg"
               Grid.ColumnSpan="5"
               Grid.RowSpan="2"
               Stretch="UniformToFill"
               />       

        <ListView x:ConnectionId='7' Grid.Column="3"
                  HorizontalAlignment="Center"
                  Padding="20"
                  BorderThickness="0"
                  ItemTemplate="{StaticResource ProductTemplate}"
                                                               
                  Background="Transparent"
                  />     
        
        
    </Grid>
</Page>

