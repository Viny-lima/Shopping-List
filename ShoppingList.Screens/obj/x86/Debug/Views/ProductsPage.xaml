<Page x:ConnectionId='1'
    x:Class="ShoppingList.Service.Views.ProductsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ShoppingList.Service.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:ShoppingList.Service.ViewModels"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>        

        <DataTemplate x:Key="ProductTemplate"                                             >

            <Border x:ConnectionId='3' Background="{StaticResource ColorProduct}" Padding="10" Margin="0 0 0 10">
                <Grid Width="300" 
                      Height="100">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:ConnectionId='5'                                    Style="{StaticResource ProductTitle}"/>
                        <TextBlock x:ConnectionId='6'                                                                                             
                                   Style="{StaticResource ProductDataRegister}"/>
                    </StackPanel>

                    <TextBlock x:ConnectionId='4'                                          
                               Style="{StaticResource ProductDescription}" Grid.Row="2"/>

                </Grid>

            </Border>
        </DataTemplate>
        
    </Page.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Source="/Assets/Images/background-list.jpg"
               Grid.ColumnSpan="5"
               Grid.RowSpan="3"
               Stretch="UniformToFill"
               />

        <Grid x:ConnectionId='7'   Name="ProductItemView"
                Grid.Column="1" 
                Grid.Row="1"
                MinWidth="400"
                MinHeight="300"
                Background="White"
                Padding="10">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>            

            <StackPanel Orientation="Horizontal" 
                    VerticalAlignment="Bottom"
                    Grid.Row="1"
                    Margin="0 10">
                
                <TextBox x:ConnectionId='13'                                                Style="{StaticResource ProductTitleTextBox}"/>
                <TextBlock x:ConnectionId='14'                                                                                                        
                           Style="{StaticResource ProductDataRegister}"/>
            </StackPanel>

            <TextBox x:ConnectionId='9'                                                          
                        Style="{StaticResource ProductDescriptionTextBox}"
                        Grid.Row="2"/>

            <StackPanel Grid.Row="3" Orientation="Horizontal">
                <Button x:ConnectionId='10' x:Name="UpdateButton" 
                        Content="Update" 
                        Style="{StaticResource NavigationButton}"
                                                            
                                                                               
                        />
                <Button x:ConnectionId='11' x:Name="DeleteButton" 
                        Content="Delete" 
                        Style="{StaticResource NavigationButton}"
                                                            
                                                                                                       
                        />
                <Button x:ConnectionId='12' Content="ADD NEW PRODUCT" 
                        Grid.Row="1"
                        HorizontalAlignment="Right"
                        Style="{StaticResource NavigationButton}"
                        Background="#85CB33"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Margin="0"
                                                         
                        />
            </StackPanel>

        </Grid>

        <ListView x:ConnectionId='8' Name="ListViewProducts"
                  Grid.Column="3"
                  Grid.RowSpan="3"
                  ScrollViewer.VerticalScrollBarVisibility="Hidden"
                  HorizontalAlignment="Center"
                  Padding="20"
                  BorderThickness="0"
                  ItemTemplate="{StaticResource ProductTemplate}"
                                                                            
                  Background="Transparent"        
                  SelectionMode="Single"   
                  IsItemClickEnabled="True"
                                                
                  />     
        
        
    </Grid>
</Page>

